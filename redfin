import requests
from bs4 import BeautifulSoup

def fetch_redfin_data():
    url = 'https://www.redfin.com/city/30802/IL/Chicago'  # Example URL for Chicago city listings on Redfin
    headers = {
        'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36'
    }

    try:
        response = requests.get(url, headers=headers)
        response.raise_for_status()  # Raise an exception for bad status codes (4xx or 5xx)
        
        soup = BeautifulSoup(response.content, 'html.parser')

        # Example: Extract property listings
        listings = soup.find_all('div', class_='HomeCardContainer')
        for listing in listings:
            address_elem = listing.find('div', class_='address')
            price_elem = listing.find('div', class_='price')
            
            if address_elem and price_elem:
                address = address_elem.text.strip()
                price = price_elem.text.strip()
                print(f"Address: {address}, Price: {price}")

    except requests.exceptions.RequestException as e:
        print(f"Error fetching data: {e}")

if __name__ == "__main__":
    fetch_redfin_data()
